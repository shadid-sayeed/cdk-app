// .devcontainer.json  (works only when VS Code is "WSL: Ubuntu")
{
  "name": "Shadid DevBox",
  "image": "shadid-devbox:latest",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    "source=/home/shadid/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "postStartCommand": "bash -lc 'chmod 700 /home/vscode/.ssh || true; chmod 600 /home/vscode/.ssh/id_* 2>/dev/null || true; touch /home/vscode/.ssh/known_hosts; ssh-keyscan -T 5 github.com >> /home/vscode/.ssh/known_hosts 2>/dev/null || true; chown -R vscode:vscode /home/vscode/.ssh'"
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-python.python",
        "amazonwebservices.aws-toolkit-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "postStartCommand": "echo 'Devbox ready ðŸš€'"
}
