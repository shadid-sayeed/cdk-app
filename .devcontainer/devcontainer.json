// .devcontainer.json  (works only when VS Code is "WSL: Ubuntu")
{
  "name": "Shadid DevBox",
  "image": "shadid-devbox:latest",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.aws,type=bind,consistency=cached"
  ],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "ms-python.python",
        "amazonwebservices.aws-toolkit-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "postStartCommand": "echo 'Devbox ready ðŸš€'"
}
